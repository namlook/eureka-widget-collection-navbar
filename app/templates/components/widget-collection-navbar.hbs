<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {{#if label}}
                {{#link-to routeModel.meta.collectionIndexViewPath class="navbar-brand"}} {{label}} {{/link-to}}
            {{/if}}

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            {{#if hasActions}}
                <ul class="nav navbar-nav navbar-right">
                    {{#if hasPrimaryActions}}
                        {{#each actionConfig in primaryActions}}
                            {{collection-navbar-action-item
                                actionConfig=actionConfig
                                currentRouteName=currentRouteName
                                toControllerAction="toControllerAction"}}
                        {{/each}}
                    {{/if}}


                    {{#if hasSecondaryActions}}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                {{#if activeSecondaryActionLabel}}
                                    {{activeSecondaryActionLabel}}
                                    <span class="caret"></span>
                                {{else}}
                                    <span class="glyphicon glyphicon-menu-hamburger"></span>
                                {{/if}}
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                {{#each actionConfig in secondaryActions}}
                                    {{#if actionConfig.divider}}
                                        <li class="divider"></li>
                                    {{else}}
                                        {{collection-navbar-action-item
                                            actionConfig=actionConfig
                                            currentRouteName=currentRouteName
                                            toControllerAction="toControllerAction"}}
                                    {{/if}}
                                {{/each}}
                            </ul>
                        </li>
                    {{/if}}
                </ul>
            {{/if}}
        </div>
    </div>
</nav>